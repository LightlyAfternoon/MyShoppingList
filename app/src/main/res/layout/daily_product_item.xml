<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center">

        <View android:id="@+id/sep_line1"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@android:color/darker_gray"
              android:visibility="gone"/>

        <TextView android:id="@+id/list_item_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="10dp"
                  android:text="10.10.2001"
                  android:visibility="gone"/>

        <TextView android:id="@+id/list_item_all_cost"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:textStyle="bold"
                  android:text="1050"
                  android:layout_marginLeft="270dp"
                  android:visibility="gone"/>
        <View android:id="@+id/sep_line2"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="20dp"
              android:background="@android:color/darker_gray"
              android:visibility="gone"/>

        <ImageView android:id="@+id/item_color"
                   android:layout_width="5dp"
                   android:layout_height="match_parent"
                   android:layout_alignParentLeft="true"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginLeft="5dp"
                   android:background="@color/material_dynamic_neutral_variant70"
                   android:contentDescription="@null"
                   android:foregroundGravity="center"/>

        <Button android:id="@+id/list_item_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/item_color"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:text="X"
                android:gravity="center"/>

        <TextView android:id="@+id/list_item_name"
                  android:layout_width="90dp"
                  android:layout_height="match_parent"
                  android:layout_toRightOf="@id/list_item_delete"
                  android:ellipsize="marquee"
                  android:textSize="16dp"
                  android:text="Молоко"
                  android:gravity="center"/>

        <TextView android:id="@+id/list_item_price"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:maxWidth="60dp"
                  android:ellipsize="marquee"
                  android:layout_marginStart="35dp"
                  android:layout_marginEnd="35dp"
                  android:layout_toLeftOf="@id/list_item_count"
                  android:text="200 р."
                  android:textSize="16dp"
                  android:gravity="center"/>

        <TextView android:id="@+id/list_item_count"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:maxWidth="30dp"
                  android:layout_toLeftOf="@id/list_item_weight_unit"
                  android:layout_marginRight="10dp"
                  android:text="100-----100"
                  android:textSize="16dp"
                  android:gravity="center"/>

        <TextView android:id="@+id/list_item_weight_unit"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_toLeftOf="@id/list_item_is_bought"
                  android:layout_marginRight="20dp"
                  android:textSize="16dp"
                  android:text="шт."
                  android:gravity="center"/>

        <CheckBox android:id="@+id/list_item_is_bought"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_alignParentRight="true"
                  android:gravity="center"/>
</RelativeLayout>