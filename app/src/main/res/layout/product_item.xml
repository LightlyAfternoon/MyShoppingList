<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:id="@+id/product_color"
               android:layout_width="5dp"
               android:layout_height="50dp"
               android:layout_alignParentLeft="true"
               android:layout_marginTop="20dp"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               android:background="@color/material_dynamic_neutral_variant70"
               android:contentDescription="@null"/>

    <Button android:id="@+id/product_delete"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:text="X"/>

    <TextView
            android:id="@+id/product_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_delete"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:ellipsize="marquee"
            android:textSize="16dp"
            android:text="Молоко"/>

    <TextView android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="35dp"
            android:layout_toLeftOf="@id/product_count"
            android:text="200 р. за"
            android:textSize="16dp" />

    <TextView android:id="@+id/product_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="40dp"
              android:layout_toLeftOf="@id/product_weight_unit"
              android:layout_marginTop="35dp"
              android:layout_marginRight="7dp"
              android:text="100"
              android:textSize="16dp"/>

    <TextView android:id="@+id/product_weight_unit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginTop="35dp"
              android:layout_marginRight="20dp"
              android:textSize="16dp"
              android:text="гр"/>
</RelativeLayout>