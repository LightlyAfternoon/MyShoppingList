<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp">

        <EditText android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Название продукта"
            android:textSize="16dp"/>

        <Spinner android:id="@+id/item_weight_unit_spinner"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:hint="шт."
                 android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:id="@+id/tv_price_for_smth"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Цена за 1 ед. "
                  android:textSize="16dp"/>

        <EditText android:id="@+id/item_price_for_one"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:ems="5"
                  android:inputType="numberDecimal"
                  android:textSize="16dp"/>
    </LinearLayout>

    <RadioGroup android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

        <RadioButton android:id="@+id/white_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/select_white_color_button"
                     android:checked="true"
                     android:button="@null"/>

        <RadioButton android:id="@+id/gray_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/select_gray_color_button"
                     android:button="@null"/>

        <RadioButton android:id="@+id/black_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/select_black_color_button"
                     android:button="@null"/>

        <RadioButton android:id="@+id/green_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/select_green_color_button"
                     android:button="@null"/>

        <RadioButton android:id="@+id/blue_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/select_blue_color_button"
                     android:button="@null"/>
    </RadioGroup>

    <Button android:id="@+id/add_new_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:textSize="16dp"/>
</LinearLayout>